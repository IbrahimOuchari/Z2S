<odoo>

    <record id="purchase_order_form_inherit" model="ir.ui.view">
        <field name="name">purchase.order.form.dispo</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_qty']" position="after">
                <field name="qty_available"/>
            </xpath>
        </field>
    </record>


        <record id="purchase_rfq_form_inherit" model="ir.ui.view">
        <field name="name">purchase.rfq.form.dispo</field>
        <field name="model">purchase.rfq</field>
        <field name="inherit_id" ref="bmg_achat.purchase_rfq_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='product_qty']" position="after">
                <field name="qty_available"/>
            </xpath>
        </field>
    </record>

     <record id="sale_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.dipso</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
                <field name="qty_available"/>
            </xpath>
        </field>
    </record>

</odoo>