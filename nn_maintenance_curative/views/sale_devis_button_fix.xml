<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_sale_devis_form_inherit" model="ir.ui.view">
        <field name="name">sale.devis.form.inherit</field>
        <field name="model">sale.devis</field>
        <field name="inherit_id" ref="bmg_sale.sale_devis_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_cancel']" position="replace">
                <button name="action_cancel" string="Perdu" class="btn-secondary" type="object"
                        attrs="{'invisible': [('state', 'not in', [('devis')])]}" groups="bmg_sale.valide_devis"/>

            </xpath>
        </field>
    </record>
</odoo>
