<odoo>
    <data>
        <!-- Form View -->
        <record id="view_maintenance_operation_list_form" model="ir.ui.view">
            <field name="name">maintenance.operation.list.form</field>
            <field name="model">maintenance.operation.list</field>
            <field name="arch" type="xml">
                <form string="Opérations par équipement">
                    <sheet>
                        <group>
                            <field name="name" string="Nom de l'opération"/>
                            <field name="equipment_id" string="Équipement"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_maintenance_operation_list_tree" model="ir.ui.view">
            <field name="name">maintenance.operation.list.tree</field>
            <field name="model">maintenance.operation.list</field>
            <field name="arch" type="xml">
                <tree string="Opérations par équipement">
                    <field name="name"/>
                    <field name="equipment_id"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_maintenance_operation_list" model="ir.actions.act_window">
            <field name="name">Opérations par équipement</field>
            <field name="res_model">maintenance.operation.list</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_maintenance_operation_list_tree"/>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_maintenance_operation_list"
                  name="Opérations par équipement"
                  parent="maintenance.menu_maintenance_configuration"
                  action="action_maintenance_operation_list"/>
    </data>
</odoo>
