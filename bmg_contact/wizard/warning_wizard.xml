<odoo>

    <record id="view_warning_wizard_form" model="ir.ui.view">
        <field name="name">view.warning.wizard.form</field>
        <field name="model">warning.wizard</field>
        <field name="arch" type="xml">
            <form string="Attention">
                <field name="sale_id" invisible="1"/>
                <field name="name"/>
                <footer>
                    <button string="Oui" class="btn-primary" type="object" name="action_confirm"/>
                    <button string="Non" class="btn-primary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
