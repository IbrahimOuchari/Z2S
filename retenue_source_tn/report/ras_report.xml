        <record id="action_ras_template" model="ir.actions.report">
            <field name="name">Retenue à la Source</field>
            <field name="model">account.payment</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">retenue_source_tn.ras_template</field>
            <field name="report_file">retenue_source_tn.ras_template</field>
