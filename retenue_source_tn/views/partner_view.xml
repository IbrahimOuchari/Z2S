<odoo>
  <data>

    <record id="view_partner_form_inherit" model="ir.ui.view">
        <field name="name">ras.partner.form.view.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="apply_ras"/>
                <field name="withholding_tax" attrs="{'invisible': [('apply_ras', '=', False)]}" options="{'no_create': True, 'no_create_edit':True}"/>
            </xpath>
        </field>
    </record>

    </data>
</odoo>