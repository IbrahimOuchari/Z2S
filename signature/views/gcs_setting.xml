<odoo>
    <record id="custom_id" model="ir.ui.view">
        <field name="name">General Settings Gcs</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="priority" eval="50"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//div[@id='contacts_settings']" position="before">
                    <div id="signature">
                        <h2>Paramètres de signature</h2>
                        <div class='row mt16 o_settings_container' id='signature'>

                            <div class="col-12 col-lg-6 o_setting_box" id="signature_option">
                                <div class="o_setting_left_pane">
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="signature_option" string="Option de signature"/>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="signature_option" class="o_light_label" widget="radio"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box" id="signature_position">
                                <div class="mt16">
                                    <div class="o_setting_left_pane">
                                        <field name="signature_position"/>
                                    </div>
                                    <div class="o_setting_right_pane" id="signature_position1">
                                        <label string="Position Signature" for="signature_position"/>

                                        <div class="text-muted" id="signature_position">
                                            Définir la position de la signature à gauche dans les rapports
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box" id="sale_order">
                                <div class="mt16">
                                    <div class="o_setting_left_pane">
                                        <field name="sale_order"/>
                                    </div>

                                    <div class="o_setting_right_pane" id="sale_order1">
                                        <label string="Commande de Vente" for="sale_order"/>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box" id="invoice">
                                <div class="o_setting_left_pane">
                                    <div class="o_setting_left_pane">
                                        <field name="invoice"/>
                                    </div>
                                    <div class="o_setting_right_pane" id="invoice1">
                                        <label string="Facture" for="invoice"/>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box" id="purchase_order">
                                <div class="o_setting_left_pane">
                                    <div class="o_setting_left_pane">
                                        <field name="purchase_order"/>
                                    </div>
                                    <div class="o_setting_right_pane" id="purchase_order1">
                                        <label string="BC Achat" for="purchase_order"/>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box" id="sale_devis">
                                <div class="o_setting_left_pane">
                                    <div class="o_setting_left_pane">
                                        <field name="sale_devis"/>
                                    </div>
                                    <div class="o_setting_right_pane" id="sale_devis">
                                        <label string="Devis" for="sale_devis"/>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box" id="purchase_rfq">
                                <div class="o_setting_left_pane">
                                    <div class="o_setting_left_pane">
                                        <field name="purchase_rfq"/>
                                    </div>
                                    <div class="o_setting_right_pane" id="purchase_rfq">
                                        <label string="DA" for="purchase_rfq"/>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </xpath>
            </data>
        </field>
    </record>
</odoo>