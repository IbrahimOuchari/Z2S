<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--  Devis Form View -->
        <record id="devis_word_form_view" model="ir.ui.view">
            <field name="name">Chiffre en Lettre Devis</field>
            <field name="model">sale.devis</field>
            <field name="inherit_id" ref="bmg_sale.sale_devis_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='note']" position="before">
                    <group colspan="2" attrs="{'invisible': [('amount_total', '&lt;=', 0)]}">
                        <div class="oe_subtotal_footer_separator oe_inline o_td_label" style="font-size:15px;">
                            <label for="num_word" style="margin-right: 8px;font-size:15px;"/>
                            <field name="num_word" string="Arrêté le Présent Devis à la Somme de : "/>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Sale Order Form View -->
        <record id="amount_word_form_view" model="ir.ui.view">
            <field name="name">Chiffre en Lettre BC</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='note']" position="before">
                    <group colspan="2" attrs="{'invisible': [('amount_total', '&lt;=', 0)]}">
                        <div class="oe_subtotal_footer_separator oe_inline o_td_label" style="font-size:15px;">
                            <label for="num_word" style="margin-right: 8px;font-size:15px;"/>
                            <field name="num_word" string="Arrêtée la Présente Commande à la Somme de : "/>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Purchase Order Form View -->
        <record id="purchase_form_view" model="ir.ui.view">
            <field name="name">Chiffre en Lettre BC Achat</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='notes']" position="before">
                    <group colspan="2"  attrs="{'invisible': [('amount_total', '&lt;=', 0)]}">
                        <div class="oe_subtotal_footer_separator oe_inline o_td_label" style="font-size:15px;">
                            <label for="num_word" style="margin-right: 8px;font-size:15px;"/>
                            <field name="num_word" string="Arrêtée la Présente Commande à la Somme de : "/>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Invoice form view for Customer Invoice -->
        <record id="invoice_customer_form_view" model="ir.ui.view">
            <field name="name">Chiffre en Lettre Facture</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@class='oe_subtotal_footer oe_right']" position="before">
                    <group colspan="2"  attrs="{'invisible': [('amount_total', '&lt;=', 0)]}">
                        <div class="oe_subtotal_footer_separator oe_inline o_td_label" style="font-size:15px; text-align:right;">
                            <label for="num_word" style="margin-right: 8px;font-size:15px;"/>
                            <field name="num_word" string="Arrêtée la Présente Facture à la Somme de : "/>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
