<odoo>
    <record id="view_productivity_filter_wizard_form" model="ir.ui.view">
        <field name="name">productivity.filter.wizard.form</field>
        <field name="model">productivity.filter.wizard</field>
        <field name="arch" type="xml">
            <form string="Filtrer les Productivités">
                <group>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </group>
                <footer>
                    <button name="action_filter" type="object" string="Confirmer" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_productivity_filter_wizard" model="ir.actions.act_window">
        <field name="name">Filtrer la Productivité</field>
        <field name="res_model">productivity.filter.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <!-- Replace existing action with the wizard -->
    <menuitem id="menu_productivity_analysis"
              name="Tableau de bord des Productivités"
              parent="mrp.menu_mrp_reporting"
              action="action_productivity_filter_wizard"
              sequence="15"/>

</odoo>
