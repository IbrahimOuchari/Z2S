<odoo>
    <record id="view_mrp_bom_cancel_wizard" model="ir.ui.view">
        <field name="name">mrp.bom.cancel.wizard</field>
        <field name="model">bom.cancel.wizard</field>
        <field name="arch" type="xml">
            <form string="Rejeter Nomenclature">
                <group>
                    <field name="invalidation_reason" placeholder="Indiquer la raison d'invalidation" required="1"/>
                    <field name="bom_id" invisible="1"/>
                </group>
                <footer>
                    <button name="confirm_reject_bom" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>

            </form>
        </field>
    </record>
    <record id="action_reject_bom_wizard" model="ir.actions.act_window">
        <field name="name">Rejeter Nomenclature</field>
        <field name="res_model">bom.cancel.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
