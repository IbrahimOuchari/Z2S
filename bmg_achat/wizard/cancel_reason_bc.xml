<odoo>

    <record id="view_wizard_cancel_reason_bc_achat_form" model="ir.ui.view">
    <field name="name">wizard.cancel.reason.bc.form</field>
    <field name="model">wizard.cancel.reason.bc.achat</field>
    <field name="arch" type="xml">
        <form>
            <group>
                <field name="cancel_reason"/>
            </group>
            <footer>
                <button string="Annuler" class="btn-secondary" special="cancel"/>
                <button string="Confirmer" class="btn-primary" type="object" name="confirm_cancel_reason_bc_achat"/>
            </footer>
        </form>
    </field>
</record>

<record id="action_wizard_cancel_reason_bc_achat" model="ir.actions.act_window">
    <field name="name">Raison de Refus</field>
    <field name="res_model">wizard.cancel.reason.bc.achat</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_wizard_cancel_reason_bc_achat_form"/>
    <field name="target">new</field>
</record>

</odoo>