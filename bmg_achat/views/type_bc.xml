<?xml version="1.0" encoding="utf-8" ?>
<odoo>

<!--    Type de commande d'achat-->
    <record id="view_purchase_order_type_tree" model="ir.ui.view">
        <field name="model">purchase.order.type</field>
        <field name="arch" type="xml">
            <tree string="Types de Commande Achat" decoration-muted="active == False">
                <field name="sequence" widget="handle" />
                <field name="active" invisible="True" />
                <field name="name"/>
                <field name="sequence_id" />
                <field name="payment_term_id" />
                <field name="incoterm_id" />
                <field name="description" />
                <field name="company_id" groups="base.group_multi_company" />
            </tree>
        </field>
    </record>
    <record id="view_purchase_order_type_form" model="ir.ui.view">
        <field name="model">purchase.order.type</field>
        <field name="arch" type="xml">
            <form string="Type">
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <field name="active" invisible="1" />
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sequence_id" />
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                            />
                        </group>
                        <group>
                            <field name="payment_term_id" />
                            <field name="incoterm_id" />
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_purchase_order_type_search" model="ir.ui.view">
        <field name="model">purchase.order.type</field>
        <field name="arch" type="xml">
            <search string="Types Commande d'Achat">
                <field name="name" />
                <field name="sequence_id" />
                <field name="payment_term_id" />
                <field name="incoterm_id" />
                <group expand="0" string="Grouper par">
                    <filter
                        string="Entry Sequence"
                        name="entry_sequence"
                        domain="[]"
                        context="{'group_by':'sequence_id'}"
                    />
                    <filter
                        string="Modalités de Paiement"
                        name="pay_terms"
                        domain="[]"
                        context="{'group_by':'payment_term_id'}"
                    />
                    <filter
                        string="Incoterm"
                        name="incoterm"
                        domain="[]"
                        context="{'group_by':'incoterm_id'}"
                    />
                    <filter
                        string="Société"
                        name="company"
                        domain="[]"
                        context="{'group_by':'company_id'}"
                        groups="base.group_multi_company"
                    />
                </group>
            </search>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_purchase_order_type_view">
        <field name="name">Types de Commande Achat</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.order.type</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="view_purchase_order_type_tree" />
        <field name="search_view_id" ref="view_purchase_order_type_search" />
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Créer un nouveau type de commande d'achat.
            </p>
        </field>
    </record>
    <menuitem
        id="menu_purchase_order_type"
        parent="purchase.menu_purchase_config"
        sequence="40"
        action="action_purchase_order_type_view"
    />

<!--    purchase order form -->

    <record id="purchase_order_form" model="ir.ui.view">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="order_type" options="{'no_create': True, 'no_create_edit':True}"/>
            </field>
        </field>
    </record>
    <record id="purchase_order_tree_type" model="ir.ui.view">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_tree" />
        <field name="arch" type="xml">
            <field name="state" position="before">
                <field
                    name="order_type"
                    invisible="context.get('group_by') == 'order_type'"
                />
            </field>
        </field>
    </record>
    <record id="view_purchase_order_filter_type" model="ir.ui.view">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_view_search" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="order_type" />
            </field>
            <group position="inside">
                <filter
                    string="Type de Commande"
                    name="order_type"
                    domain="[]"
                    context="{'group_by': 'order_type'}"
                />
            </group>
        </field>
    </record>

<!--    Ajouter type dans demande d'achat-->

    <!--    purchase order form -->

    <record id="purchase_rfq_type_form" model="ir.ui.view">
        <field name="model">purchase.rfq</field>
        <field name="inherit_id" ref="bmg_achat.purchase_rfq_form_view" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="order_type" options="{'no_create': True, 'no_create_edit':True}"/>
            </field>
        </field>
    </record>




<!--    ajouter type dans la vue  contact-->
      <record model="ir.ui.view" id="res_partner_purchase_type_form_view">
        <field name="name">res.partner.purchase_type.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <page name="sales_purchases" position="inside">
                <field name="supplier_rank" invisible="1" />
                <group
                    colspan="2"
                    col="2"
                    attrs="{'invisible':[('is_supplier','=', False)]}"
                >
                    <separator string="Type de Commande d'Achat " colspan="2" />
                    <field name="purchase_type" options="{'no_create': True, 'no_create_edit':True}"/>
                </group>
            </page>
        </field>
    </record>


</odoo>
