<odoo>

    <record id="view_cancel_inventory_wizard_form" model="ir.ui.view">
        <field name="name">cancel.inventory.wizard.form</field>
        <field name="model">wizard.cancel.inventory</field>
        <field name="arch" type="xml">
            <form string="Rejeter l'Inventaire">
                <group>
                    <field name="invalidation_reason" placeholder="Indiquer la raison d'invalidation" required="1"/>
                    <field name="inventory_id" invisible="1"/>
                </group>
                <footer>
                    <button name="confirm_reject_inventory" string="Confirmer" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


<record id="action_reject_inventory_wizard" model="ir.actions.act_window">
    <field name="name">Rejeter l'Inventaire</field>
    <field name="res_model">wizard.cancel.inventory</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>

</odoo>