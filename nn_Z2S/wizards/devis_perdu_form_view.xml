<odoo>
    <record id="view_sale_devis_wizard" model="ir.ui.view">
        <field name="name">devis_perdu.cancel.wizard</field>
        <field name="model">devis.perdu.wizard</field>
        <field name="arch" type="xml">
            <form string="Rejeter Devis">
                <group>
                    <field name="invalidation_reason" placeholder="Indiquer la raison d'invalidation" required="1"/>
                    <field name="sale_devis_id" invisible="1"/>
                </group>
                <footer>
                    <button name="confirm_reject_devis" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>

            </form>
        </field>
    </record>
    <record id="action_devis_perdu" model="ir.actions.act_window">
        <field name="name">Devis Non Concrétisé</field>
        <field name="res_model">devis.perdu.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
