<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Paper Format -->
        <record id="report_etiquette_lot_paperformat" model="report.paperformat">
            <field name="name">Lot Etiquette</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">110</field> <!-- Custom size -->
            <field name="page_width">50</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">5</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="dpi">90</field>
        </record>

        <!-- Report Action -->
        <record id="action_template_lot_print" model="ir.actions.report">
            <field name="name">Etiquette Lots</field>
            <field name="model">stock.picking</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">nn_Z2S.report_template_etiquette_lot_print</field>
            <field name="report_file">nn_Z2S.report_template_etiquette_lot_print</field>
            <field name="paperformat_id" ref="report_etiquette_lot_paperformat"/>
        </record>


<template id="report_template_etiquette_lot_print">
    <t t-call="web.html_container">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="picking">
                <t t-foreach="picking.move_lines" t-as="move">
                    <t t-foreach="move.label_management_ids" t-as="label">
                        <div style="text-align: left; page-break-after: always;">
                            <table style="width: 30mm !important; font-size: 8px; margin-bottom: 5mm;margin-top: -2mm;">
                                <tr>
                                    <td style="padding-left: 24mm; padding-top:5mm;">
                                        <img t-att-src="image_data_uri(picking.company_id.logo)"
                                             style="text-align:center; width:25mm; height:25mm;"/>
                                    </td>
                                </tr>
                            </table>
                            <table style="width: 70mm !important; border: 3px solid black; font-size: 14px; margin: 0 auto; padding: 0; border-right: 2px solid black;">
                                <tr>
                                    <td style="border: 1px solid black; border-right: 2px solid black; padding: 6px; font-size: 14px; text-align: center;">
                                        <p style="font-weight: bold; margin: 3px;">Fournisseur :</p>
                                        <p style="margin: 3px;">
                                            <span t-esc="picking.partner_id.name"/>
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border: 1px solid black; border-right: 2px solid black; font-size: 14px; text-align: center;">
                                        <p style="font-weight: bold; margin: 3px;">REFERENCE :
                                            <span t-esc="move.ref_product_client_id"/>
                                        </p>
                                         <div style="margin: 6px; overflow: hidden; text-align: center;">
                                                <t t-if="move.product_id.barcode">
                                                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', mrp.product_id.barcode, 600, 50)"
                                                         style="width:100%;height:3.5rem" alt="Barcode"/>
                                                </t>
                                                <t t-elif="move.ref_product_client_id">
                                                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128',move.ref_product_client_id, 600, 50)"
                                                         style="width:100%;height:3.5rem" alt="Barcode"/>
                                                </t>
                                                <t t-else="">
                                                    <span style="color: red; font-size: 14px;">Aucune référence trouvée
                                                        pour la génération du code-barres
                                                    </span>
                                                </t>
                                            </div>

                                    </td>
                                </tr>
                                <tr>
                                    <td style="border: 1px solid black; border-right: 2px solid black; padding: 6px; font-size: 14px; text-align: center;">
                                        <p style="font-weight: bold; margin: 3px;">DESIGNATION:</p>
                                        <p style="margin: 3px;">
                                            <span t-esc="move.description_sale_id"/>
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border: 1px solid black; border-right: 2px solid black; padding: 6px; font-size: 14px; text-align: center;">
                                        <p style="font-weight: bold; margin: 3px;">QUANTITÉ :</p>
                                        <p style="margin: 3px;">
                                            <span t-esc="label.quantity_per_batch" t-options='{"widget": "float", "precision": 0}'/>
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border: 1px solid black; border-right: 2px solid black; padding: 6px; font-size: 14px; text-align: center;">
                                        <p style="font-weight: bold; margin: 3px;">STATUT:</p>
                                        <p style="margin: 3px;">
                                            <span t-esc="label.state.upper()"/>
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border: 1px solid black; border-right: 2px solid black; padding: 6px; font-size: 14px; text-align: center;">
                                        <p style="font-weight: bold; margin: 3px;">DATE:</p>
                                        <p style="margin: 3px;">
                                            <span t-esc="picking.date_done"/>
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border: 1px solid black; border-right: 2px solid black; padding: 6px; font-size: 14px; text-align: center;">
                                        <p style="font-weight: bold; margin: 3px;">N° BL:</p>
                                        <p style="margin: 3px;">
                                            <span t-esc="picking.origin"/>
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border: 1px solid black; border-right: 2px solid black; padding: 6px; font-size: 14px; text-align: center;">
                                        <p style="font-weight: bold; margin: 3px;">ID-ETQ:</p>
                                        <p style="margin: 3px;">
                                            <span t-esc="label.name"/>
                                        </p>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </t>
    </t>
</template>

    </data>
</odoo>
