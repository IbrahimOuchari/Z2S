<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="report_etiquette_print_z2s" model="report.paperformat">
            <field name="name">Etiquette</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">110</field> <!-- 50% of 210 -->
            <field name="page_width">50</field> <!-- 50% of 100 -->
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">1</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">10</field>
            <field name="dpi">90</field>
        </record>

        <record id="action_label_management_stock_move_report" model="ir.actions.report">
            <field name="name">Label Management Report</field>
            <field name="model">label.management</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">nn_Z2S.label_management_stock_move_line_report_new</field>
            <field name="report_file">nn_Z2S.label_management_stock_move_line_report_new</field>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="report_etiquette_print_z2s"/>
        </record>


        <template id="label_management_stock_move_line_report_new">
            <t t-call="web.html_container">
                <t t-call="web.basic_layout">
                    <t t-foreach="docs" t-as="lot">
                        <div style="text-align: left; page-break-after: always;">
                            <table style="width: 30mm !important; font-size: 8px; margin-bottom: 5mm;">
                                <tr>
                                    <td style="padding-left: 24mm;padding-top:5mm;">
                                        <img t-att-src="image_data_uri(lot.stock_move_id.picking_id.company_id.logo)"
                                             style="text-align:center; width:25mm;height: 25mm;"/>
                                    </td>
                                </tr>
                            </table>
                            <table style="width: 70mm !important; border: 3px solid black; font-size: 14px; margin: 0 auto; padding: 0; border-right: 2px solid black;">
                                <tr>
                                    <td colspan="1"
                                        style="border: 1px solid black; border-right: 2px solid black; padding: 6px; font-size: 14px; width: 100%; text-align: center;">
                                        <p style="font-weight: bold; margin: 3px;">Fournisseur :</p>
                                        <p style="margin: 3px;">
                                            <span t-esc="lot.stock_move_id.picking_id.partner_id.name"/>
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="1"
                                        style="border: 1px solid black; border-right: 2px solid black; font-size: 14px; width: 100%; text-align: left;">
                                        <p style="font-weight: bold; text-align: center; margin: 3px;">REFERENCE :
                                            <span t-esc="lot.stock_move_id.ref_product_client_id"/>
                                        </p>
                                        <div style="margin: 6px; overflow: hidden; text-align: center;">
                                            <t t-if="lot.stock_move_id.product_id.barcode">
                                                <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', lot.stock_move_id.product_id.barcode, 600, 100)"
                                                     style="width:100%;height:3.5rem" alt="Barcode"/>
                                            </t>
                                            <t t-elif="lot.stock_move_id.ref_product_client_id">
                                                <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', lot.stock_move_id.ref_product_client_id, 600, 100)"
                                                     style="width:100%;height:3.5rem" alt="Barcode"/>
                                            </t>
                                            <t t-else="">
                                                <span style="color: red; font-size: 14px;">Aucune référence trouvée
                                                    pour la génération du code-barres
                                                </span>
                                            </t>
                                        </div>

                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="1"
                                        style="border: 1px solid black; border-right: 2px solid black; font-size: 14px; padding: 6px; width: 100%; text-align: center;">
                                        <p style="font-weight: bold; margin: 3px;">DESIGNATION:</p>
                                        <p style="margin: 3px;">
                                            <span t-esc="lot.stock_move_id.description_sale_id"/>
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="1"
                                        style="border: 1px solid black; border-right: 2px solid black; padding: 6px; width: 100%; font-size: 14px; text-align: center;">
                                        <p style="font-weight: bold; margin: 3px;">QUANTITE :</p>
                                        <p style="margin: 3px;">
                                            <span t-esc="lot.quantity_per_batch"
                                                  t-options='{"widget": "float", "precision": 0}'/>
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="1"
                                        style="border: 1px solid black; border-right: 2px solid black; padding: 6px; width: 100%; font-size: 14px; text-align: center;">
                                        <p style="font-weight: bold; margin: 3px;">STATUT:</p>
                                        <p style="margin: 3px;">
                                            <span t-esc="lot.state.upper()"/>
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="1"
                                        style="border: 1px solid black; border-right: 2px solid black; padding: 6px; width: 100%; font-size: 14px; text-align: center;">
                                        <p style="font-weight: bold; margin: 3px;">DATE:</p>
                                        <p style="margin: 3px;">
                                            <span t-esc="lot.stock_move_id.picking_id.date_done"/>
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="1"
                                        style="border: 1px solid black; border-right: 2px solid black; padding: 6px; width: 100%; font-size: 14px; text-align: center;">
                                        <p style="font-weight: bold; margin: 3px;">N° BL:</p>
                                        <p style="margin: 3px;">
                                            <span t-esc="lot.stock_move_id.picking_id.origin"/>
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="1"
                                        style="border: 1px solid black; border-right: 2px solid black; padding: 6px; width: 100%; font-size: 14px; text-align: center;">
                                        <p style="font-weight: bold; margin: 3px;">ID-ETQ:</p>
                                        <p style="margin: 3px;">
                                            <span t-esc="lot.name"/>
                                        </p>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>
