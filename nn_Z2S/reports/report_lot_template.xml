<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="report_etiquette_print_z2s" model="report.paperformat">
            <field name="name">Etiquette</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">110</field>  <!-- 4 cm = 40 mm -->
            <field name="page_width">50</field>   <!-- 7 cm = 70 mm -->
            <field name="orientation">Portrait</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">3</field>
            <field name="dpi">90</field>
        </record>
        <record id="action_template_etiquette_print" model="ir.actions.report">
            <field name="name">Etiquette</field>
            <field name="model">mrp.production</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">nn_Z2S.report_template_etiquette_print_fixed</field>
            <field name="report_file">nn_Z2S.report_template_etiquette_print_fixed</field>
            <field name="binding_model_id" eval="False"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="report_etiquette_print_z2s"/>
        </record>
        <template id="report_template_etiquette_print_fixed">
            <t t-call="web.html_container">

                <t t-call="web.basic_layout">

                    <t t-foreach="docs" t-as="mrp">
                        <t t-foreach="mrp.label_management_ids" t-as="label">

                            <div style="text-align: left; page-break-after: always;">

                                <table style="width: 30mm !important; font-size: 8px;  margin-bottom: 5mm;">
                                    <tr>
                                        <td style="padding-left: 24mm;padding-top:5mm;">
                                            <img t-att-src="image_data_uri(mrp.company_id.logo)"
                                                 style="text-align:center; width:25mm;height: 25mm;"/>
                                        </td>
                                    </tr>
                                </table>
                                <table style="width: 70mm !important; border: 3px solid black; font-size: 14px; margin: 0 auto; padding: 0; border-right: 2px solid black;">
                                    <tr>
                                        <td colspan="1"
                                            style="border: 1px solid black; border-right: 2px solid black; padding: 6px; font-size: 14px; width: 100%; text-align: center;">
                                            <p style="font-weight: bold; margin: 3px;">Client :</p>
                                            <p style="margin: 3px;">
                                                <span t-esc="mrp.client_id.name"/>
                                            </p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="1"
                                            style="border: 1px solid black; border-right: 2px solid black; font-size: 14px; width: 100%; text-align: left;">
                                            <p style="font-weight: bold; text-align: center; margin: 3px;">REFERENCE :
                                                <span t-esc="mrp.ref_product_client_manual"/>
                                            </p>
                                            <div style="margin: 6px; overflow: hidden; text-align: center;">
                                                <t t-if="mrp.product_id.barcode">
                                                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', mrp.product_id.barcode, 600, 100)"
                                                         style="width:100%;height:3.5rem" alt="Barcode"/>
                                                </t>
                                                <t t-elif="mrp.product_id.ref_product_client_manual">
                                                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', mrp.product_id.ref_product_client, 600, 100)"
                                                         style="width:100%;height:3.5rem" alt="Barcode"/>
                                                </t>
                                                <t t-else="">
                                                    <span style="color: red; font-size: 14px;">Aucune référence trouvée
                                                        pour la génération du code-barres
                                                    </span>
                                                </t>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="1"
                                            style="border: 1px solid black; border-right: 2px solid black; font-size: 14px; padding: 6px; width: 100%; text-align: center;">
                                            <p style="font-weight: bold; margin: 3px;">DESIGNATION:</p>
                                            <p style="margin: 3px;">
                                                <span t-esc="mrp.description"/>
                                            </p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="1"
                                            style="border: 1px solid black; border-right: 2px solid black; padding: 6px; width: 100%; font-size: 14px; text-align: center;">
                                            <p style="font-weight: bold; margin: 3px;">QUANTITÉ :
                                                <p style="margin: 3px;">
                                                    <span t-esc="label.quantity_per_batch"
                                                          t-options='{"widget": "float", "precision": 0}'/>
                                                </p>
                                            </p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="1"
                                            style="border: 1px solid black; border-right: 2px solid black; padding: 6px; width: 100%; font-size: 14px; text-align: center;">
                                            <p style="font-weight: bold; margin: 3px;">STATUT:</p>
                                            <p style="margin: 3px;">
                                                <span t-esc="label.state.upper()"/>
                                            </p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="1"
                                            style="border: 1px solid black; border-right: 2px solid black; padding: 6px; width: 100%; font-size: 14px; text-align: center;">
                                            <p style="font-weight: bold; margin: 3px;">DATE:</p>
                                            <p style="margin: 3px;">
                                                <span t-esc="label.date"/>
                                            </p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="1"
                                            style="border: 1px solid black; border-right: 2px solid black; padding: 6px; width: 100%; font-size: 14px; text-align: center;">
                                            <p style="font-weight: bold; margin: 3px;">N°OF:</p>
                                            <p style="margin: 3px;">
                                                <span t-esc="mrp.name"/>
                                            </p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="1"
                                            style="border: 1px solid black; border-right: 2px solid black; padding: 6px; width: 100%; font-size: 14px; text-align: center;">
                                            <p style="font-weight: bold; margin: 3px;">ID-ETQ:</p>
                                            <p style="margin: 3px;">
                                                <span t-esc="label.name"/>
                                            </p>
                                        </td>
                                    </tr>
                                </table>

                            </div>
                        </t>
                    </t>
                </t>
            </t>
        </template>

        <record id="view_print_etiquette" model="ir.ui.view">
            <field name="name">view.print.etiquette</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="print_etiquette" states="progress,done"
                            string="Imprimer Etiquette" class="btn-primary" type="object"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
