<odoo>
    <!-- Quality Control Sequence -->
    <record id="seq_control_quality" model="ir.sequence">
        <field name="name">Control Quality Reference</field>
        <field name="code">control.quality</field>
        <field name="padding">4</field>
        <field name="implementation">no_gap</field>
    </record>

    <!-- Quality Control Form View -->
    <record id="view_quality_control_form" model="ir.ui.view">
        <field name="name">control.quality.form</field>
        <field name="model">control.quality</field>
        <field name="arch" type="xml">
            <form string="Contrôle de Qualité">
                <header>
                    <field name="state" widget="statusbar"/>
                    <button name="action_validate" type="object" string="Validate" class="btn-primary"
                            states="in_progress"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="buttons">
                        <button type="button" class="btn btn-success" name="action_total_conform">
                            <span t-field="total_conform_count"/>
                            Total Nombre Conforme
                        </button>
                        <button type="button" class="btn btn-danger" name="action_total_non_conform">
                            <span t-field="total_non_conform_count"/>
                            Total Nombre Non Conforme
                        </button>
                    </div>
                    <group>
                        <field name="reference" string="Référence"
                               attrs="{'readonly': [('state', 'in', ['in_progress','draft','done'])]}"/>
                        <field name="of_id" options="{'no_create': True}" string="Ordre de Fabrication"
                               domain="[('quality_control_checked', '=', False)]"
                               attrs="{'readonly': [('state', 'in', ['in_progress', 'done'])]}"/>
                        <field name="article_id" options="{'no_create': True}" string="Article"
                               attrs="{'readonly': [('state', 'in', ['in_progress', 'done'])]}"/>
                        <field name="client_reference" options="{'no_create': True}" string="Référence Client"
                               attrs="{'readonly': [('state', 'in', ['in_progress', 'done'])]}"/>
                        <field name="client_id" options="{'no_create': True}" string="Client"
                               attrs="{'readonly': [('state', 'in', ['in_progress', 'done'])]}"/>
                        <field name="designation" options="{'no_create': True}"
                               attrs="{'readonly': [('state', 'in', ['in_progress', 'done'])]}"/>
                        <field name="qty_producing" attrs="{'readonly': [('state', 'in', ['in_progress', 'done'])]}"/>
                        <field name="total_lines" attrs="{'readonly': [('state', 'in', ['in_progress', 'done'])]}"/>

                        <div class="oe_title">
                            <h2>Type 1</h2>
                        </div>
                        <div class="form-group">
                            <label for="type_1">Type 1:</label>
                            <field name="type_1" string="Type 1"/>
                            <label for="type1_conform_count">Nombre Conforme:</label>
                            <field name="type1_conform_count" string="Nombre Conforme"/>
                            <label for="type1_non_conform_count">Nombre Non Conforme:</label>
                            <field name="type1_non_conform_count" string="Nombre Non Conforme"/>
                        </div>

                        <div class="oe_title">
                            <h2>Type 2</h2>
                        </div>
                        <div class="form-group">
                            <label for="type_2">Type 2:</label>
                            <field name="type_2" string="Type 2"/>
                            <label for="type2_conform_count">Nombre Conforme:</label>
                            <field name="type2_conform_count" string="Nombre Conforme"/>
                            <label for="type2_non_conform_count">Nombre Non Conforme:</label>
                            <field name="type2_non_conform_count" string="Nombre Non Conforme"/>
                        </div>

                        <div class="oe_title">
                            <h2>Type 3</h2>
                        </div>
                        <div class="form-group">
                            <label for="type_3">Type 3:</label>
                            <field name="type_3" string="Type 3"/>
                            <label for="type3_conform_count">Nombre Conforme:</label>
                            <field name="type3_conform_count" string="Nombre Conforme"/>
                            <label for="type3_non_conform_count">Nombre Non Conforme:</label>
                            <field name="type3_non_conform_count" string="Nombre Non Conforme"/>
                        </div>
                    </group>

                    <notebook>
                        <!-- Page for Type 1 -->
                        <page string="Contrôle Type 1" attrs="{'invisible': [('type_1', '=', False)]}">
                            <field name="type1_line_ids">
                                <tree editable="bottom">
                                    <field name="serial_number"/>
                                    <field name="operator_id"
                                           attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"
                                           domain="[('job_id.name', '=', 'Opérateur de Production')]"/>
                                    <field name="result1"/>
                                    <field name="defect_type_id"
                                           attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>
                                    <field name="reprise_id"
                                           attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>
                                    <field name="result2"
                                           attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name="serial_number"/>
                                            <field name="operator_id"
                                                   attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>
                                            <field name="result1"/>
                                            <field name="defect_type_id"
                                                   attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>
                                            <field name="reprise_id"
                                                   attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>
                                            <field name="result2"
                                                   attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>

                        <!-- Page for Type 2 -->
                        <page string="Contrôle Type 2" attrs="{'invisible': [('type_2', '=', False)]}">
                            <field name="type2_line_ids">
                                <tree editable="bottom">
                                    <field name="serial_number"/>
                                    <field name="operator_id"
                                           attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>
                                    <field name="result1"/>
                                    <field name="defect_type_id"
                                           attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>
                                    <field name="reprise_id"
                                           attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>
                                    <field name="result2"
                                           attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name="serial_number"/>
                                            <field name="operator_id"
                                                   attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>
                                            <field name="result1"/>
                                            <field name="defect_type_id"
                                                   attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>
                                            <field name="reprise_id"
                                                   attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>
                                            <field name="result2"
                                                   attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>

                        <!-- Page for Type 3 -->
                        <page string="Contrôle Type 3" attrs="{'invisible': [('type_3', '=', False)]}">
                            <field name="type3_line_ids">
                                <tree editable="bottom">
                                    <field name="serial_number"/>
                                    <field name="operator_id"
                                           attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>
                                    <field name="result1"/>
                                    <field name="defect_type_id"
                                           attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>
                                    <field name="reprise_id"
                                           attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>
                                    <field name="result2"
                                           attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name="serial_number"/>
                                            <field name="operator_id"
                                                   attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>
                                            <field name="result1"/>
                                            <field name="defect_type_id"
                                                   attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>
                                            <field name="reprise_id"
                                                   attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>
                                            <field name="result2"
                                                   attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Quality Control Tree View -->
    <record id="view_quality_control_tree" model="ir.ui.view">
        <field name="name">control.quality.tree</field>
        <field name="model">control.quality</field>
        <field name="arch" type="xml">
            <tree string="Contrôle de Qualité">
                <field name="reference"/>
                <field name="of_id"/>
                <field name="client_reference"/>
                <field name="client_id"/>
                <field name="article_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Quality Control Action -->
    <record id="action_quality_control" model="ir.actions.act_window">
        <field name="name">Contrôle de Qualité</field>
        <field name="res_model">control.quality</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_quality_control_tree"/>
    </record>

    <menuitem name="Gestion qualité" id="menu_root_Z2S" sequence="2" web_icon="nn_Z2S/static/description/applogo.png" />

    <!-- Rental Order Menu -->
    <menuitem id="menu_Z2S_control_quality" name="Control qualité" action="action_quality_control"
              parent="menu_root_Z2S"
              sequence="1"/>
</odoo>
