<odoo>
    <record id="product_template_only_view_product_history" model="ir.ui.view">
        <field name="name">product.template.product.inventory.line</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Locate the description_sale field and add the new field after it -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <!-- Add the custom button here -->
                <button name="action_show_product_template_inventory_line" type="object"
                        string="Historique d'ajustements"
                        icon="fa-history"
                        class="oe_stat_button"
                />
            </xpath>
        </field>
    </record>

    <record id="view_stock_inventory_line_tree_inherit_history" model="ir.ui.view">
        <field name="name">stock.inventory.line.tree.inherit</field>
        <field name="model">stock.inventory.line</field>
        <field name="inherit_id" ref="nn_Z2S.view_stock_inventory_line_tree_inherited"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='inventory_date']" position="attributes">
                <attribute name="optional">show</attribute>
            </xpath>
        </field>
    </record>

        <record id="product_product_inventory_line_history" model="ir.ui.view">
            <field name="name">product.product.inventory.line.history_new</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <!-- Locate the description_sale field and add the new field after it -->
                <xpath expr="//div[@name='button_box']" position="inside">
                    <!-- Add the custom button here -->
                    <button name="action_show_product_product_inventory_line" type="object"
                            string="Historique d'ajustements"
                            icon="fa-history"
                            class="oe_stat_button"
                    />
                </xpath>
            </field>
        </record>
</odoo>