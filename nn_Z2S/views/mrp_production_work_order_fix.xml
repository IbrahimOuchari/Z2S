<odoo>
    <record id="mrp_production_temp_field" model="ir.ui.view">
        <field name="name">mrp.production.tree.fix</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='product_qty']" position="after">

                <field name="operation_count_action_trigger" optional="1"/>
                <field name="field_to_trigger" optional="1"/>
                <field name="action_trigger_operation_count" optional="1"/>


            </xpath>
        </field>
    </record>


</odoo>