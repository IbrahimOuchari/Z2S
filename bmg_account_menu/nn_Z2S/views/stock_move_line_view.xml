<odoo>


    <data>
        <!-- Extend the stock move line tree view -->
        <record id="view_move_line_tree_inherit" model="ir.ui.view">
            <field name="name">stock.move.line.tree.inherit</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <field name="category_id"/>
                    <field name="type_id"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_stock_move_line_form_inherit" model="ir.ui.view">
            <field name="name">stock.move.line.form.inherit</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_form"/> <!-- Use the correct view ID -->
            <field name="arch" type="xml">
                <xpath expr="//form/sheet" position="inside">
                    <group>
                        <field name="category_id"/>
                        <field name="type_id"/>
                        <field name="partner_id"/>
                        <field name="product_id"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>


</odoo>

