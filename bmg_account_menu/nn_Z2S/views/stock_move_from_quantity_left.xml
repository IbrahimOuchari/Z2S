<odoo>
    <data>
        <!-- Inheritance view for stock picking -->
        <record id="stock_move_add_quantity_left" model="ir.ui.view">
            <field name="name">view.stock.move.quantity_left</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <!-- Assurez-vous que l'expression XPath cible le bon élément -->
                <xpath expr="//field[@name='move_ids_without_package']//field[@name='quantity_done']" position="after">
                    <field name="quantity_left" string="Quantité restant"/>
                </xpath>
                <xpath expr="//field[@name='location_dest_id']" position="attributes">
                    <attribute name="attrs">{'readonly': [('state', '=', 'done')]}
                    </attribute>
                </xpath>
                <xpath expr="//field[@name='origin']" position="before">
                    <field name="date_done"/>
                </xpath>


            </field>
        </record>

    </data>
</odoo>