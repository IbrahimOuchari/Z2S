<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="report_control_quality_print_z2s" model="report.paperformat">
            <field name="name">Etiquette</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">200</field> <!-- 50% of 210 -->
            <field name="page_width">100</field> <!-- 50% of 100 -->
            <field name="orientation">Landscape</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">5</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">10</field>
            <field name="dpi">90</field>
        </record>
        <record id="action_template_quality_controle_print" model="ir.actions.report">
            <field name="name">Controle qualité imppression</field>
            <field name="model">control.quality</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">nn_quality_control.report_template_control_quality_print</field>
            <field name="report_file">nn_quality_control.report_template_control_quality_print</field>
            <field name="binding_model_id" eval="False"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="report_control_quality_print_z2s"/>
        </record>
        <template id="report_template_control_quality_print">
            <t t-call="web.html_container">
                <div class="page">
                    <t t-foreach="docs" t-as="quality_control">
                        <t t-if="quality_control.type_1">
                            <h2>Contrôle de Qualité Type 1</h2>
                            <table class="table table-condensed"
                                   style="width: 100%; border-collapse: collapse; font-size: 10px;">
                                <tr>
                                    <th style="border: 1px solid black; padding: 3px; text-align: center;">Référence
                                        Fiche Contrôle
                                    </th>
                                    <th style="border: 1px solid black; padding: 3px; text-align: center;">Ordre de
                                        Fabrication
                                    </th>
                                    <th style="border: 1px solid black; padding: 3px; text-align: center;">Article</th>
                                </tr>
                                <tr>
                                    <td style="border: 1px solid black; padding: 3px; text-align: center;">
                                        <span t-esc="quality_control.reference"/>
                                    </td>
                                    <td style="border: 1px solid black; padding: 3px; text-align: center;">
                                        <span t-esc="quality_control.of_id.name"/>
                                    </td>
                                    <td style="border: 1px solid black; padding: 3px; text-align: center;">
                                        <span t-esc="quality_control.article_id.name"/>
                                    </td>
                                </tr>
                            </table>
                            <h3>Détails Type 1</h3>
                            <table class="table table-condensed"
                                   style="width: 100%; border-collapse: collapse; font-size: 10px;">
                                <tr>
                                    <th style="border: 1px solid black; padding: 3px; text-align: center;">Numéro de
                                        Série
                                    </th>
                                    <th style="border: 1px solid black; padding: 3px; text-align: center;">Opérateur
                                    </th>
                                    <th style="border: 1px solid black; padding: 3px; text-align: center;">Résultat 1
                                    </th>
                                    <th style="border: 1px solid black; padding: 3px; text-align: center;">Résultat 2
                                    </th>
                                    <th style="border: 1px solid black; padding: 3px; text-align: center;">Type de
                                        Défaut
                                    </th>
                                    <th style="border: 1px solid black; padding: 3px; text-align: center;">Reprise</th>
                                </tr>
                                <t t-foreach="quality_control.type1_line_ids" t-as="line">
                                    <tr>
                                        <td style="border: 1px solid black; padding: 3px; text-align: center;">
                                            <span t-esc="line.serial_number"/>
                                        </td>
                                        <td style="border: 1px solid black; padding: 3px; text-align: center;">
