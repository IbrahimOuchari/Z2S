<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Wizard Forms -->
    <record id="view_productivity_filter_wizard_type1_form" model="ir.ui.view">
        <field name="name">productivity.filter.wizard.type1.form</field>
        <field name="model">productivity.filter.wizard.type1</field>
        <field name="arch" type="xml">
            <form string="Filtrer Opérations Type 1 par date de création">
                <group>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </group>
                <footer>
                    <button string="Appliquer" type="object" name="action_filter" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_productivity_filter_wizard_type2_form" model="ir.ui.view">
