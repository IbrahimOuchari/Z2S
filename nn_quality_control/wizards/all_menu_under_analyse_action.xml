        <field name="name">Filtrer Opérations Type 1</field>
        <field name="res_model">productivity.filter.wizard.type1</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_productivity_filter_wizard_type1_form"/>
        <field name="target">new</field>
    </record>

    <record id="action_productivity_filter_wizard_type2" model="ir.actions.act_window">
        <field name="name">Filtrer Opérations Type 2</field>
        <field name="res_model">productivity.filter.wizard.type2</field>
