<odoo>
   <template id="nn_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="company" t-value="env.company"/>
                <html>
                    <head>
                        <style type="text/css">
                            .header {
                                padding: 20px;
                                margin-bottom: 30px;
                            }
                            .footer {
                                padding: 20px;
                                position: absolute;
                                bottom: 0;
                                width: 100%;
                                border-top: 1px solid #ddd;
                            }
                            main {
                                margin: 0 20px;
                                padding-bottom: 60px;
                            }
                        </style>
                    </head>
                    <body>
                        <div class="header" style="border-bottom: 1px solid black;">
                            <div class="row">
                                <div class="col-3">
                                    <img t-if="env.company.logo" t-att-src="image_data_uri(env.company.logo)" style="max-height: 45px;" alt="Logo"/>
                                </div>
                                <div class="col-9 text-right" style="margin-top:22px;">
                                    <div t-field="env.company.name"/>
                                    <div t-field="env.company.street"/>
                                    <div t-field="env.company.city"/>
                                    <div t-field="env.company.country_id.name"/>
                                </div>
                            </div>
                        </div>
                        <main>
                            <t t-raw="0"/>
                        </main>
                        <div class="footer">
                            <div class="row">
                                <div class="col-6">
                                    <div t-field="env.company.phone"/>
                                    <div t-field="env.company.email"/>
                                    <div t-field="env.company.website"/>
                                </div>
                                <div class="col-6 text-right">
                                    <div>
                                        Page: <span class="page"/> / <span class="topage"/>
                                    </div>
                                    <div>
                                        Generated on <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </body>
                </html>
            </t>
        </t>
    </template>


