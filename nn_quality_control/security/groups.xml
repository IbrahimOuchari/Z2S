<odoo>
    <!-- Create a new category for your module -->


    <!-- Define the Quality Manager group under the created category -->
    <record id="group_quality_manager" model="res.groups">
        <field name="name">Quality Manager</field>
    </record>
    <record id="ir_ui_menu_rule_user_new" model="ir.rule">
        <field name="name">Restrict Menu from Users</field>
        <field name="model_id" ref="model_ir_ui_menu"/>
        <field name="domain_force">[('restrict_user_ids','not in',user.id)]</field>
    </record>


       <!-- Record Rule to Prevent Edit for Quality Managers -->
    <record id="rule_mrp_production_quality_readonly_new" model="ir.rule">
        <field name="name">Manufacturing Orders Readonly for Quality Managers</field>
        <field name="model_id" ref="mrp.model_mrp_production"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_quality_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

</odoo>
