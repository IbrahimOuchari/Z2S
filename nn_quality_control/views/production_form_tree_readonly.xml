<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action for Manufacturing Orders -->
    <record id="action_manufacturing_orders_readonly" model="ir.actions.act_window">
        <field name="name">Manufacturing Orders</field>
        <field name="res_model">mrp.production</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'create': False, 'edit':False, 'delete': False}</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('mrp.mrp_production_tree_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('mrp.mrp_production_form_view')})]"/>
    </record>


    <!-- Menu Item -->
    <menuitem id="menu_manufacturing_orders_quality"
              name="Manufacturing Orders"
              parent="menu_root_control_quality"
              action="action_manufacturing_orders_readonly"
              sequence="10"/>
</odoo>