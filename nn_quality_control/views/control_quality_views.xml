<odoo>

    <record id="view_quality_control_form" model="ir.ui.view">
        <field name="name">control.quality.form</field>
        <field name="model">control.quality</field>
        <field name="arch" type="xml">
            <form string="Contrôle de Qualité" class="custom-form-styles">
                <header>
                    <field name="state" widget="statusbar" colors='{"draft":"red","in_progress":"blue"}'/>


                    <button name="action_validate" type="object" string="Validate" class="btn-primary"
                            states="closed"/>
                    <button name="print_control_quality" type="object" string="Imprimer Controle qualité"
                            class="btn-primary"
                    />

                    <button name="action_force_closure"
                            string="Forcer la Clôture"
                            type="object"
                            class="btn-danger"
                            group="nn_quality_control.force_closure_cq"
                            attrs="{'invisible': [('state', '!=', 'in_progress')]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box d-flex flex-wrap" name="buttons" style="gap: 5px;">
                        <button type="button" class="btn btn-primary" name="action_taux_defaut_global"
                                string="Taux Global des Défauts (%)"
                                attrs="{'invisible': [('state', '=', 'done')]}">
                            <span t-field="global_defect_rate"/> <!-- This will show the computed value -->
                            <field name="global_defect_rate" attrs="{'readonly': True}"/>

                        </button>

                        <button type="button" class="btn btn-primary" name="action_taux_defaut_global"
                                string="PPM"
                                attrs="{'invisible': [('state', '=', 'done')]}">
                            <span t-field="ppm"/> <!-- This will show the computed value -->
                            <field name="ppm" attrs="{'readonly': True}"/>

                        </button>
                    </div>

                    <group>
                        <field name="controlleur_id" invisible="1"/>
                        <field name="company" invisible="1"/>
                        <field name="start_date" invisible="1"/>
                        <field name="end_date" invisible="1"/>
                        <field name="barcode" invisible="1"/>
                        <field name="reference" string="Référence" attrs="{'readonly': True}"/>
                        <field name="of_id" options="{'no_create': True}" string="Ordre de Fabrication"
                        />
                        <field name="article_id" attrs="{'readonly': True}"/>
                        <field name="client_reference" string="Référence Client" attrs="{'readonly': True}"/>
                        <field name="client_id" string="Client" attrs="{'readonly': True}"/>
                        <field name="designation" attrs="{'readonly': True}"/>
                        <!--                        <field name="qty_producing_related" attrs="{'readonly': True}"/>-->
                        <field name="product_qty" attrs="{'readonly': True}"/>
                        <field name="total_lines" attrs="{'readonly': True}"/>
                        <field name="other_info"/>
                    </group>
                    <!-- Type 1 Section -->

                    <div class="form-group">
                        <div>
                            <label for="type_1" string="Contrôle lampe loupe"
                                   style="font-size: 1.5em; font-weight: bold;"/>
                            <field name="type_1" string="Type 1" attrs="{'readonly': [('state', '=', 'done')]}"
                                   style="font-size: 1.5em;"/>
                        </div>
                        <div style="display: flex; gap: 10px; margin-top: 10px;"> <!-- Use flexbox to align buttons -->
                            <button type="button" class="btn btn-success" name="action_total_conform"
                                    attrs="{'invisible': [('type_1', '=', False)]}">
                                <span t-field="type1_conform_count"/>
                                Nombre Conforme
                                <field name="type1_conform_count"/>
                            </button>
                            <button type="button" class="btn btn-danger" name="action_total_non_conform"
                                    attrs="{'invisible': [('type_1', '=', False)]}">
                                <span t-field="type1_non_conform_count"/>
                                Nombre Non Conforme
                                <field name="type1_non_conform_count"/>
                            </button>
                            <button type="button" class="btn btn-danger" name="action_total_non_conform"
                                    attrs="{'invisible': [('type_1', '=', False)]}">
                                <span t-field="type1_total_client_default"/>
                                Total default client
                                <field name="type1_total_client_default"/>
                            </button>
                            <button type="button" class="btn btn-danger" name="action_total_non_conform"
                                    attrs="{'invisible': [('type_1', '=', False)]}">
                                <span t-field="type1_client_default_avg"/>
                                Taux default %
                                <field name="type1_client_default_avg"/>
                            </button>


                        </div>
                    </div>

                    <!-- Type 2 Section -->
                    <div class="form-group">
                        <div>
                            <label for="type_2" string="Contrôle Caméra" style="font-size: 1.5em; font-weight: bold;"/>
                            <field name="type_2" string="Type 2" attrs="{'readonly': [('state', '=', 'done')]}"/>
                        </div>
                        <div style="display: flex; gap: 10px; margin-top: 10px;"> <!-- Use flexbox to align buttons -->
                            <button type="button" class="btn btn-success" name="action_total_conform"
                                    attrs="{'invisible': [('type_2', '=', False)]}">
                                <span t-field="type2_conform_count"/>
                                Nombre Conforme
                                <field name="type2_conform_count"/>
                            </button>
                            <button type="button" class="btn btn-danger" name="action_total_non_conform"
                                    attrs="{'invisible': [('type_2', '=', False)]}">
                                <span t-field="type2_non_conform_count"/>
                                Nombre Non Conforme
                                <field name="type2_non_conform_count"/>
                            </button>
                            <button type="button" class="btn btn-danger" name="action_total_non_conform"
                                    attrs="{'invisible': [('type_2', '=', False)]}">
                                <span t-field="type2_total_client_default"/>
                                Total default client
                                <field name="type2_total_client_default"/>
                            </button>
                            <button type="button" class="btn btn-danger" name="action_total_non_conform"
                                    attrs="{'invisible': [('type_2', '=', False)]}">
                                <span t-field="type2_client_default_avg"/>
                                Taux default %
                                <field name="type2_client_default_avg"/>
                            </button>
                        </div>
                    </div>

                    <!-- Type 3 Section -->
                    <div class="form-group">
                        <div>
                            <label for="type_3" string="Contrôle Rayon X" style="font-size: 1.5em; font-weight: bold;"/>
                            <field name="type_3" string="Type 3" attrs="{'readonly': [('state', '=', 'done')]}"/>
                        </div>
                        <div style="display: flex; gap: 10px; margin-top: 10px;"> <!-- Use flexbox to align buttons -->
                            <button type="button" class="btn btn-success" name="action_total_conform"
                                    attrs="{'invisible': [('type_3', '=', False)]}">
                                <span t-field="type3_conform_count"/>
                                Nombre Conforme
                                <field name="type3_conform_count"/>
                            </button>
                            <button type="button" class="btn btn-danger" name="action_total_non_conform"
                                    attrs="{'invisible': [('type_3', '=', False)]}">
                                <span t-field="type3_non_conform_count"/>
                                Nombre Non Conforme
                                <field name="type3_non_conform_count"/>
                            </button>
                            <button type="button" class="btn btn-danger" name="action_total_non_conform"
                                    attrs="{'invisible': [('type_3', '=', False)]}">
                                <span t-field="type3_total_client_default"/>
                                Total default client
                                <field name="type3_total_client_default"/>
                            </button>
                            <button type="button" class="btn btn-danger" name="action_total_non_conform"
                                    attrs="{'invisible': [('type_3', '=', False)]}">
                                <span t-field="type3_client_default_avg"/>
                                Taux default %
                                <field name="type3_client_default_avg"/>
                            </button>
                        </div>
                    </div>

                    <notebook>
                        <!-- Page for Type 1 -->
                        <page string="Contrôle lampe loupe" attrs="{'invisible': [('type_1', '=', False)]}">
                            <field name="type1_line_ids">
                                <tree editable="bottom" class="text-center">

                                    <field name="serial_number" width="400px"/>
                                    <field name="controlleur_id" readonly="True"/>
                                    <field name="operator_id" required="True" options="{'no_create': True}"

                                    />
                                    <field name="service_count"/>
                                    <field name="result1" sortable="True"/>
                                    <field name="defect1" options="{'no_create': True}"
                                           attrs="{'invisible': [('result1', '=', 'conform')],'required': [('result1', '=', 'non_conform')]}"/>
                                    <field name="defect2" options="{'no_create': True}"
                                           attrs="{'invisible': [('result1', '=', 'conform')]}"/>

                                    <field name="reprise_id" options="{'no_create': True}"
                                           attrs="{ 'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')] }"/>

                                    <field name="result2" sortable="True"/>
                                    <!--                                    <field name="created_date" readonly="True"/>-->

                                    <field name="other_info"/>
                                    <field name="timestamp"/>
                                </tree>

                            </field>
                        </page>

                        <!-- Page for Type 2 -->
                        <page string="Contrôle Caméra" attrs="{'invisible': [('type_2', '=', False)]}">
                            <field name="type2_line_ids">
                                <tree editable="bottom" class="text-center">

                                    <field name="serial_number" width="400px"/>
                                    <field name="controlleur_id" readonly="True"/>
                                    <field name="operator_id" required="True" options="{'no_create': True}"

                                    />
                                    <field name="service_count"/>
                                    <field name="result1" sortable="True"/>
                                    <field name="defect1" options="{'no_create': True}"
                                           attrs="{'invisible': [('result1', '=', 'conform')],'required': [('result1', '=', 'non_conform')]}"/>
                                    <field name="defect2" options="{'no_create': True}"
                                           attrs="{'invisible': [('result1', '=', 'conform')]}"/>
                                    <field name="reprise_id" options="{'no_create': True}"
                                           attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>

                                    <field name="result2" sortable="True"
                                    />
                                    <field name="other_info"/>
                                    <field name="timestamp"/>

                                </tree>

                            </field>
                        </page>

                        <!-- Page for Type 3 -->
                        <page string="Contrôle Rayon X" attrs="{'invisible': [('type_3', '=', False)]}">
                            <field name="type3_line_ids">
                                <tree editable="bottom" class="text-center">

                                    <field name="serial_number" width="400px"/>
                                    <field name="controlleur_id" readonly="True"/>
                                    <field name="operator_id" required="True" options="{'no_create': True}"
                                    />
                                    <field name="service_count"/>
                                    <field name="result1" sortable="True"/>
                                    <field name="defect1" options="{'no_create': True}"
                                           attrs="{'invisible': [('result1', '=', 'conform')],'required': [('result1', '=', 'non_conform')]}"/>
                                    <field name="defect2" options="{'no_create': True}"
                                           attrs="{'invisible': [('result1', '=', 'conform')]}"/>
                                    <field name="reprise_id" options="{'no_create': True}"
                                           attrs="{'invisible': [('result1', '=', 'conform')], 'required': [('result1', '=', 'non_conform')]}"/>

                                    <field name="result2" sortable="True"/>
                                    <field name="other_info"/>
                                    <field name="timestamp"/>

                                </tree>

                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Quality Control Tree View -->
    <record id="view_quality_control_tree" model="ir.ui.view">
        <field name="name">control.quality.tree</field>
        <field name="model">control.quality</field>
        <field name="arch" type="xml">
            <tree string="Contrôles de Qualité">
                <field name="reference"/>
                <field name="of_id" options="{'no_create': True}" string="Ordre de Fabrication"/>
                <field name="article_id"/>
                <field name="client_reference"/>
                <field name="client_id"/>
                <field name="designation"/>
                <field name="total_lines"/>
                <field name="state" widget="badge"
                       decoration-muted="state == 'draft'"
                       decoration-info="state == 'in_progress'"
                       decoration-success="state == 'validated'"
                       decoration-primary="state == 'closed'"/>
            </tree>
        </field>
    </record>

    <record id="view_quality_control_search" model="ir.ui.view">
        <field name="name">control.quality.search</field>
        <field name="model">control.quality</field>
        <field name="arch" type="xml">
            <search>
                <field name="state"/>
                <!-- Default filter, automatically applied when the view loads -->
                <filter name="default_in_progress_draft"
                        string="In Progress or Draft"
                        domain="[('state', 'in', ['in_progress', 'draft'])]"
                />
            </search>
        </field>
    </record>
    <record id="action_quality_control" model="ir.actions.act_window">
        <field name="name">Contrôles de Qualité</field>
        <field name="res_model">control.quality</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"search_default_default_in_progress_draft":1}</field>

    </record>

    <record id="seq_control_quality" model="ir.sequence">
        <field name="name">Control Quality Reference</field>
        <field name="code">control.quality</field>
        <field name="padding">4</field>
        <field name="implementation">no_gap</field>
    </record>
    <menuitem name="Gestion qualité" id="menu_root_control_quality" sequence="6"
              web_icon="nn_quality_control,static/src/my_icon.png"/>

    <!-- Rental Order Menu -->
    <menuitem id="menu_Z2S_control_quality"
              name="Contrôle Qualité"
              action="action_quality_control"
              parent="menu_root_control_quality"
              sequence="1"
    /> <!-- Replace with your actual module name -->

</odoo>
