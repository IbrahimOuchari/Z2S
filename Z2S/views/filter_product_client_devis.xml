<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="sale_devis_form_view_inherit_product_client" model="ir.ui.view">
        <field name="name">sale.devis.form.product.client</field>
        <field name="model">sale.devis</field>
        <field name="inherit_id" ref="bmg_sale.sale_devis_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='product_id']" position="attributes">
                <attribute name="domain">[('client_id', '=', parent.partner_id), ('sale_ok', '=', True)]</attribute>
            </xpath>
        </field>
    </record>
</odoo>