<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_purchase_quotation_order_id" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="priority">16</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='product_id']" position="attributes">
                    <attribute name="domain">[('seller_ids.name', '=', parent.partner_id), ('purchase_ok', '=', True)]
                    </attribute>
                    <attribute name="options">{'no_create': True, 'no_create_edit':True}</attribute>
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_create_edit':True}</attribute>
                </xpath>

                <xpath expr="//tree/field[@name='product_id']" position="before">
                    <field name="ref_product_client_id" string="Référence"/>
                </xpath>
            </field>
        </record>

        <record id="view_add_rfq_line" model="ir.ui.view">
        <field name="name">add_rfq_line_form</field>
        <field name="model">purchase.rfq</field>
        <field name="inherit_id" ref="bmg_achat.purchase_rfq_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//form//sheet//notebook//page//field//tree/field[@name='product_id']" position="before">
                <field name="ref_product_client_id" string="Référence Article"/>
            </xpath>

             <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='product_id']" position="attributes">
                    <attribute name="domain">[('purchase_ok', '=', True), ('state_product', '=', '1')]</attribute>
                    <attribute name="options">{'no_create': True, 'no_create_edit':True}</attribute>
                </xpath>
        </field>
    </record>
    </data>
</odoo>