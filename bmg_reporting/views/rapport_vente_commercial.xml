<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report
                id="action_report_by_salesperson"
                string="By Salesperson"
                model="sale.salesperson.report"
                report_type="qweb-pdf"
                file="bmg_sale.rapport_vente_commercial"
                name="bmg_sale.rapport_vente_commercial"
        />
    </data>

    <template id="rapport_vente_commercial">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">

                <style>
                    .table, .table td, .table th {
                    border: 1px solid #ddd;
                    text-align: left;
                    }

                    .table {
                    border-collapse: collapse;
                    width: 100%;
                    }

                    .table th, .table td {
                    padding: 10px;
                    }

                    .salesperson{
                    padding: 50px
                    }
                </style>

                <div class="page">
                    <div class="oe_structure"/>
                    <center>
                        <b>
                            <h3>Rapport de Vente par Commercial</h3>
                        </b>
                    </center>
                    <center>
                        <b>
                            <span t-esc="start_date"/>
                            To
                            <span t-esc="end_date"/>
                        </b>
                    </center>
                    <br/>
                    <t t-foreach="data.keys()" t-as="user">
                        <br/>
                        <center>
                            <b class="salesperson">
                                <span>Commercial :</span>
                                <span t-esc="user"/>
                            </b>
                        </center>
                        <br/>

                        <t t-set="total_sum" t-value="0"/>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Commande</th>
                                    <th>Date</th>
                                    <th>Client</th>
                                    <th>Sous-Total</th>
                                </tr>
                                <tr t-foreach="data[user]" t-as="order">
                                    <td>
                                        <span t-esc="order[0]"/>
                                    </td>
                                    <td>
                                        <span t-esc="order[1]" t-options='{"widget": "date"}'/>
                                    </td>
                                    <td>
                                        <span t-esc="order[2]"/>
                                    </td>
                                    <td>
                                        <span t-esc="order[3]"/>
                                        <t t-set="total_sum" t-value="total_sum + order[3]"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                    </td>
                                    <td>
                                        <b>Chiffre d'Affaire</b>
                                    </td>
                                    <td>
                                        <span t-esc="total_sum"/>
                                    </td>
                                </tr>
                            </thead>
                        </table>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>