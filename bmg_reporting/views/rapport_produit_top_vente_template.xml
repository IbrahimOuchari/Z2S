<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_products_amount">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <div style="text-align: center;">
                            <span style="font-size: 25px;">Produits les plus vendus en valeurs</span>
                        </div>
                        <br></br>
                        <div class="row mt32 mb32">
                            <div class="col-xs-4">
                                <p>
                                    <t t-if="docs.start_date">
                                        <strong>Date Début :</strong>
                                        <span t-esc="docs.start_date"/>
                                        <br/>
                                    </t>
                                    <br></br>
                                    <t t-if="docs.end_date">
                                        <strong>Date Fin :</strong>
                                        <span t-esc="docs.end_date"/>
                                    </t>
                                </p>
                            </div>
                        </div>
                        <br></br>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Produits</th>
                                    <th class="text-right">Total Vente</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="products" t-as="a">
                                    <td>
                                        <span t-esc="a['name']"/>
                                    </td>
                                    <td class="text-right" style="white-space: text-nowrap;">
                                        <span t-esc="a['amount']"
                                              t-options="{'widget': 'monetary', 'display_currency': a['pricelist_id']}"/>
                                    </td>

                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_products">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <div style="text-align: center;">
                            <span style="font-size: 25px;">Produits les plus vendus par unités</span>
                        </div>
                        <br></br>
                        <div class="row mt32 mb32">
                            <div class="col-xs-4">
                                <p>
                                    <t t-if="docs.start_date">
                                        <strong>Date Début :</strong>
                                        <span t-esc="docs.start_date"/>
                                        <br/>
                                    </t>
                                    <br></br>
                                    <t t-if="docs.end_date">
                                        <strong>Date Fin :</strong>
                                        <span t-esc="docs.end_date"/>
                                    </t>
                                </p>
                            </div>
                        </div>
                        <br></br>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Produits</th>
                                    <th class="text-right">Total Quantités</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="products" t-as="a">
                                    <td>
                                        <span t-esc="a['name']"/>
                                    </td>
                                    <td class="text-right" style="white-space: text-nowrap;">
                                        <span t-esc="a['qty']"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
