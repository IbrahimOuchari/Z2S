<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_product_purchase_form" model="ir.ui.view">
        <field name="name">view.product.purchase.form</field>
        <field name="model">purchase.order.line</field>
        <field name="arch" type="xml">
            <form string="Rapport des Commandes Achats" create="false">
                <sheet>
                    <group col="3">
                        <group>
                            <field name="partner_id"/>
                            <field name="date_order" options="{'widget': 'date'}"/>
                        </group>
                        <group>
                            <field name="product_id"/>
                            <field name="name"/>
                            <field name="product_qty"/>
                            <field name="qty_received"/>
                            <field name="qty_invoiced"/>
                            <field name="product_uom"/>
                            <field name="product_uom_category_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="price_unit"/>
                            <field name="price_tax" string="T.V.A."/>
                            <field name="price_subtotal"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_product_purchase_tree" model="ir.ui.view">
        <field name="name">view.product.purchase.list</field>
        <field name="model">purchase.order.line</field>
        <field name="arch" type="xml">
            <tree string="Rapport des Commandes Achats" create="false">
                <field name="partner_id" string="Fournisseur"/>
                <field name="date_order" options="{'widget': 'date'}"/>
                <field name="product_id"/>
                <field name="name"/>
                <field name="product_qty"/>
                <field name="qty_received"/>
                <field name="qty_invoiced"/>
                <field name="product_uom"/>
                <field name="price_unit"/>
                <field name="price_tax" string="T.V.A."/>
                <field name="price_subtotal"/>
                <field name="product_uom_category_id" invisible="1"/>
            </tree>
        </field>
    </record>


    <record id="action_report" model="ir.actions.act_window">
        <field name="name">Rapport des Produits</field>
        <field name="res_model">purchase.order.line</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_product_purchase_tree"/>
    </record>


</odoo>